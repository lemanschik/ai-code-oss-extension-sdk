{
	"compilerOptions": {
		"outDir": "cline-modules",
        "skipDefaultLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "maxNodeModuleJsDepth": 1,
		"composite": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["es2022", "DOM"],
		"module": "esnext",
		"moduleResolution": "Bundler",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": false,
        "declaration": true,
		"strict": true,
		"target": "es2022",
		"useDefineForClassFields": true,
		"useUnknownInCatchVariables": false,
		"baseUrl": ".",
		"paths": {
			"@/*": ["packages/cline-modules/src/*"],
			"@api/*": ["packages/cline-modules/src/api/*"],
			"@core/*": ["packages/cline-modules/src/core/*"],
			"@generated/*": ["packages/cline-modules/src/generated/*"],
			"@hosts/*": ["packages/cline-modules/src/hosts/*"],
			"@integrations/*": ["packages/cline-modules/src/integrations/*"],
			"@packages/*": ["packages/cline-modules/src/packages/*"],
			"@services/*": ["packages/cline-modules/src/services/*"],
			"@shared/*": ["packages/cline-modules/src/shared/*"],
			"@utils/*": ["packages/cline-modules/src/utils/*"]
		}
	},
    "references": [{ "path": "./packages/extension" }],
	"include": ["packages/@cline/scripts/**/*","packages/@cline/modules"],
	"exclude": ["node_modules", ".vscode-test", "webview-ui", "src/test/e2e/**/*"]
}